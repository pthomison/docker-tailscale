name: Build Image

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  build:
    runs-on: ubuntu-latest

    env:
      tag: placeholder

    steps:
    - uses: actions/checkout@v2

    - name: Build and push
      uses: docker/build-push-action@v2
      with:
        push: false
        tags: pthomison/tailscale:${{env.tag}}